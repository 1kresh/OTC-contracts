        otc.sendMessage(IOTC.ProcessPointer(0, 0), "OK2!");

        otc.getProcess(IOTC.ProcessPointer(0, 0));

        otc.finishProcess(IOTC.ProcessPointer(0, 0), approved);
        
        vm.stopPrank();

        otc.withdrawFees(address(token0));
    }

